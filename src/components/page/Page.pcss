.pageContainer {
	display: flex;
	position: relative;

	& .pageNumber {
		position: absolute;
		bottom: 0.25em;
		right: 0.25em;
		font-size: 0.75em;
	}

	& .image {
		display: flex;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;

		&.isEvenPage {
			background-position-x: -50%;
		}
	}
}
